@model IEnumerable<Chunya5.Models.Bonds>

@{
    ViewData["Title"] = "Index";
}

<h1>债券信息维护及查询</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="input-group mb-3" style="width:500px">
  <input type="text" class="form-control" placeholder="请输入债券编码和债券名称查询" aria-label="Recipient's username" aria-describedby="button-addon2">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary" style="border-radius:0 2px 2px 0" type="button" id="button-addon2">搜索</button>
  </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BondsCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BondsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Market)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frequency)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BondsCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BondsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Market)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParValue)￥
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)%
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Term)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Frequency)
                </td>
                <td>
                    <a asp-action="Edit"  class="btn btn-info" asp-route-id="@item.Id">编辑</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
